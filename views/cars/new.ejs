<!DOCTYPE html>
<%- include('../partials/header') %>

            <% if (user) { %>
                <form class='key' action='/cars' method='POST'>
                <h1 class='title'>Enter New Car</h1>
                <p class='title-description'>Make sure to fill out all the fields.</p>
                <div>
                        <label class='make'>Make</label>
                        <input required class='inputBox' type='text' name='make'>
                        <br>
                        <label class='model'>Model</label>
                        <input required class='inputBox' type='text' name='model'>
                        <br>
                        <label class='year'>Year</label>
                        <input required class='inputBox' type='number' name='year'>
                        <br>
                        <label class='posted'>By</label>
                        <input required class='inputBox' type='text' name='author'>
                        <br>
                        <label class='author'>Details</label>
                        <textarea required class='otherarea' type='text' name='description'></textarea>
                        <br>
                        <input class='allButtons' type='submit' value='Submit'/>
                </form>
                <% } else { %>
                    <h1 class='title'>Only For Users Logged In</h1>
                    <% } %> 
                </div>
<%- include('../partials/footer') %>