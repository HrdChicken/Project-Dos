<!DOCTYPE html>
<%- include('../partials/header') %>

            <% if (user) { %>
                <form class='content' action='/cars' method='POST'>
                <h1 class='title'>Enter New Car</h1>
                <p class='title-description'>Make sure to fill out all the fields.</p>
                <div class='newpage'>
                        <label class='content'>Make</label>
                        <input class='inputBox' type='text' name='make'>
                        <label class='content'>Model</label>
                        <input class='inputBox' type='text' name='model'>
                        <label class='content'>Year</label>
                        <input class='inputBox' type='text' name='year'>
                        <label class='content'>Description</label>
                        <textarea class='textBox' type='text' name='description'></textarea>
                        <input class='allButtons' type='submit' value='Submit'/>
                </form>
                <% } else { %>
                    <h1 class='title'>Only For Users Logged In</h1>
                    <% } %> 
                </div>
<%- include('../partials/footer') %>